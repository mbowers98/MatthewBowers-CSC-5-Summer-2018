//System Libraries
#include <iostream> //I/O Library -> cout,endl
#include <iomanip>  //Format Library
using namespace std;//namespace I/O stream library created

//User Libraries

//Global Constants
//Math, Physics, Science, Conversions, 2-D Array Columns

//Function Prototypes

//Execution Begins Here!
int main(int argc, char** argv) {
    //Declare Variables
    const int Penny = 1;
    const int Nickle = 5;
    const int Dime = 10 ;
    const int Quarter = 25;
    //Initial Variables
    int Number_Pen;
    int Number_Nick;
    int Number_Dime;
    int Number_Quar;
    int Total_Amount;
    
    cout << "Enter The Amount of Pennies\n";
    cin >> Number_Pen;
    cout << "Enter The Amount of Nickle(s)\n";
    cin >> Number_Nick ;
    cout << "Enter The Amount of Dime(s) \n";
    cin >> Number_Dime;
    cout << "Enter The Amount of Quarter(s)\n";
    cin >> Number_Quar;
    
    Total_Amount = (Number_Pen*Penny)+(Number_Nick*Nickle)+(Number_Dime*Dime)+(Number_Quar*Quarter);
    
    if (Total_Amount ==100)
        cout << "Congratulations For Winning!\n";
    else if (Total_Amount > 100)
        cout << "Your Total is more than a dollar D:\n";
    else 
            cout << "Your Total is less than a dollar D: \n";
    
    //Initial Variables
    
    //Map/Process Inputs to Outputs

    //Exit program!
    return 0;
}