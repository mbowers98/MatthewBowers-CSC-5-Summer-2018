//System Libraries
#include <iostream> //I/O Library -> cout,endl
#include <iomanip>  //Format Library
using namespace std;//namespace I/O stream library created

//User Libraries

//Global Constants
//Math, Physics, Science, Conversions, 2-D Array Columns

//Function Prototypes

//Execution Begins Here!
int main(int argc, char** argv) {
    //Declare Variables

    //Initial Variables
    
    //Map/Process Inputs to Outputs
    int number;
    cout << "Enter a number from 1 - 10" << endl;
    cin >> number; 
    
    switch (number)
    {
        case 1:
            cout << "The Roman numeral is: I ";
            break;
        case 2:
            cout << "The Roman numeral is: II";
            break;
        case 3: 
            cout << "The Roman numeral is: III";
            break;
        case 4: 
            cout << "The Roman numeral is: IV";
            break;
        case 5: 
            cout << "The Roman numeral is: V";
            break;
        case 6: 
            cout << "The Roman numeral is VI";
            break;
        case 7: 
            cout << "The Roman numeral is VII";
            break;
        case 8: 
            cout << "The Roman numeral is VIII";
            break;
        case 9: 
            cout << "The Roman numeral is IX";
            break;
        case 10:
            cout << "The Roman numeral is X";
            break;
                    
    }
    
    //Exit program!
    return 0;
}