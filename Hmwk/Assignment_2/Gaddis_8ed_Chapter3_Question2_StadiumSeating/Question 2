//System Libraries
#include <iostream> //I/O Library -> cout,endl
#include <iomanip>  //Format Library
using namespace std;//namespace I/O stream library created

//User Libraries

//Global Constants
//Math, Physics, Science, Conversions, 2-D Array Columns

//Function Prototypes

//Execution Begins Here!
int main(int argc, char** argv) {
    //Declare Variables
    double ClassA;
    double ClassB;
    double ClassC;
    
    cout << "How many Class A tickets were sold?" << endl; 
    cin >> ClassA;
    cout << "How many Class B tickets were sold?" << endl; 
    cin >> ClassB;
    cout << "How many Class C tickets were sold?" << endl;
    cin >> ClassC;
    double CAsold = ClassA * 15;
    double CBsold = ClassB * 12;
    double CCsold = ClassC * 9;
    double Total = CAsold+ CBsold + CCsold;
    cout << "Total sales for Class A: $" << CAsold << endl; 
    cout << "Total Sales for Class B: $" << CBsold << endl; 
    cout << "Total Sales for CLass C: $" << CCsold << endl;
    cout << "Total sales for all tickets sold: $" << Total << endl;
    //Initial Variables
    
    //Map/Process Inputs to Outputs

    //Exit program!
    return 0;
}