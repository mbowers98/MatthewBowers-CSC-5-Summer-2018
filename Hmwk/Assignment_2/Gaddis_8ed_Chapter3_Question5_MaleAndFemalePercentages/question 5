//System Libraries
#include <iostream> //I/O Library -> cout,endl
#include <iomanip>  //Format Library
using namespace std;//namespace I/O stream library created

//User Libraries

//Global Constants
//Math, Physics, Science, Conversions, 2-D Array Columns

//Function Prototypes

//Execution Begins Here!
int main(int argc, char** argv) {
    //Declare Variables

    //Initial Variables
    double Females,Males;
    cout << "How many males are in the class?" << endl;
    cin >> Males;
    cout << "How many females are in the class?"<< endl;
    cin >> Females;
    double Total= Males+ Females ;
    double percentageM= Males/Total *100 ;
    double percentageF= Females/Total* 100;
    
    cout << "The percentage of males in the class is: %" << percentageM  << endl;
    cout << "The percentage of Females in the class is: %" << percentageF << endl;
            
    //Map/Process Inputs to Outputs

    //Exit program!
    return 0;
}