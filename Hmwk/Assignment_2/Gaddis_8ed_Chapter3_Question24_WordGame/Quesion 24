//System Libraries
#include <iostream> //I/O Library -> cout,endl
#include <iomanip>  //Format Library
using namespace std;//namespace I/O stream library created

//User Libraries

//Global Constants
//Math, Physics, Science, Conversions, 2-D Array Columns

//Function Prototypes

//Execution Begins Here!
int main(int argc, char** argv) {
    //Declare Variables
    //Initial Variables
    string Name;
    string Age;
    string City;
    string College;
    string Profession;
   string Animal;
    string PetName;
    //Map/Process Inputs to Outputs
    cout << "Whats is your name?" << endl;
    cin >> Name;
    cout << "How old are you?" << endl;
    cin >> Age; 
    cout << "What is the name of the city your in?" << endl;
    cin >> City; 
    cout << "What is the name of your college?" << endl;
    cin >> College;
    cout << "Name a profession" << endl;
    cin >> Profession;
    cout<< "Name a type of animal" << endl;
    cin >> Animal;
    cout << "Name a pet name" << endl;
    cin >> PetName;
    
    cout << "There once was a person named " << Name << " who lived in " << City << ".At the age of\n" << Age << "," << Name << " went to college at "
<< College << "." << Name << " graduated and went to work as a " << Profession << ".\n Then, " << Name << " adopted a(n) " << Animal << " named" << PetName << ".They both lived happily ever after!" << endl;            
      
    //Exit program!
    return 0;
}